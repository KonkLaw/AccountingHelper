<Window x:Class="AccountHelperWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AccountHelperWpf.ViewModels"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewUtils="clr-namespace:AccountHelperWpf.ViewUtils"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainWindowVM}"
        Height="990" Width="1500"
        WindowState="Maximized"
        Title="Account Helper">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding WindowClosing}" PassEventArgsToCommand="True"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Window.Resources>
        <viewUtils:TabContentTemplateSelector x:Key="TabContentTemplateSelector"/>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Background="Transparent" Margin="8, 0" BorderThickness="0.5"
                    Command="{Binding LoadOperationFileCommand}"
                    ToolTip="Open new file with operations"
                    FontFamily="{DynamicResource SymbolThemeFontFamily}" Content="&#xe8e5;" FontSize="24" />
            <Button Background="Transparent" Margin="8, 0" BorderThickness="0.5"
                    Command="{Binding SaveAssociation}"
                    ToolTip="Save associations"
                    FontFamily="{DynamicResource SymbolThemeFontFamily}" Content="&#xE74E;" FontSize="24" />
            <Border BorderThickness="1" BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"></Border>
            <StackPanel Orientation="Horizontal" Visibility="{Binding IsFileTab, Converter={StaticResource VisibilityConverter}}">
                <Button Background="Transparent" Margin="8, 0" BorderThickness="0.5"
                        Command="{Binding SetForAll}"
                        ToolTip="Close and remove currently opened file with operations"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" Content="&#xE71D;" FontSize="24" />
                <Button Background="Transparent" Margin="8, 0" BorderThickness="0.5"
                        Command="{Binding RemoveFile}"
                        ToolTip="Close and remove currently opened file with operations"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" Content="&#xE711;" FontSize="24"/>
            </StackPanel>
            <Button HorizontalAlignment="Right"
                    Background="Transparent" Margin="8, 0" BorderThickness="0.5"
                    Command="{Binding About}"
                    ToolTip="About application"
                    FontFamily="{DynamicResource SymbolThemeFontFamily}" Content="&#xe946;" FontSize="24"/>
        </DockPanel>
        <TabControl Grid.Row="1" ItemsSource="{Binding Tabs}"
                    ContentTemplateSelector="{StaticResource TabContentTemplateSelector}"
                    SelectedItem="{Binding SelectedTab, Mode=TwoWay}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                        <Setter Property="Foreground" 
                                                Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="False">
                                        <Setter Property="Foreground" 
                                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>
