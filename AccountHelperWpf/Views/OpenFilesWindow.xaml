<Window x:Class="AccountHelperWpf.Views.OpenFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AccountHelperWpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:OpenFilesViewModel}"
        Title="Open Files" Height="350" Width="300">
    <StackPanel>
        <ItemsControl ItemsSource="{Binding LoadedFiles}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding Remove, Mode=OneTime}" Content="Remove"/>
                        <TextBox Text="{Binding Description, Mode=OneTime}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Load operations file" Width="140" Margin="5" Command="{Binding AddFile, Mode=OneTime}" />
        <Button Content="Next Step" Width="140" Margin="5" Command="{Binding NextStep, Mode=OneTime}" />
        <Button Content="Load history files" Width="140" Margin="5" Visibility="Collapsed"/>
    </StackPanel>
</Window>
