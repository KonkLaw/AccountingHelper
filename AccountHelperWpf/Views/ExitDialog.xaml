<Window x:Class="AccountHelperWpf.Views.ExitDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="110" Width="300">
    <StackPanel>
        <Label HorizontalAlignment="Center" Content="Are you sure you want exit without saving?"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Save And Exit" Margin="9" HorizontalAlignment="Center" Click="SaveAndExit_OnClick"/>
            <Button Grid.Column="1" Content="Exit" HorizontalAlignment="Center" Margin="9" Click="Exit_OnClick"/>
            <Button Grid.Column="2" Content="Cancel" Margin="9" HorizontalAlignment="Center" Click="Cancel_OnClick"/>
        </Grid>
    </StackPanel>
</Window>
